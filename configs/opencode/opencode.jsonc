{
  "$schema": "https://opencode.ai/config.json",
  "theme": "lucent-orng",
  "instructions": [
    "AGENTS.md"
  ],
  "default_agent": "tens",
  "agent": {
    "build": {
      "description": "Build-focused agent with full access",
      "mode": "primary",
      "model": "opencode/big-pickle",
      "steps": 5
    },
    "plan": {
      "description": "Planning-only agent, no write/edit access",
      "mode": "primary",
      "model": "opencode/big-pickle"
    }
  },
  "permission": {
    "external_directory": "allow",
    "edit": "allow",
    "bash": "allow"
  },
  "watcher": {
    "ignore": [
      "node_modules/**",
      "dist/**",
      ".git/**",
      ".svelte-kit/**",
      "build/**",
      "__gen__/**"
    ]
  },
  "compaction": {
    "auto": true,
    "prune": true
  },
  "formatter": {
    "dprint": {
      "command": [
        "dprint",
        "fmt",
        "$FILE"
      ],
      "extensions": [
        ".svelte",
        ".ts",
        ".js",
        ".tsx",
        ".jsx",
        ".html",
        ".css",
        ".json",
        ".yaml",
        ".md"
      ]
    },
    "prettier": {
      "disabled": true
    }
  },
  "plugin": [
    "@sveltejs/opencode@latest",
    "oh-my-opencode-slim@latest",
    "@tarquinen/opencode-dcp@latest",
    "openslimedit@latest",
    "opencode-quota-auto",
    "opencode-glm-quota"
  ],
  "mcp": {
    "nushell": {
      "type": "local",
      "command": [
        "nu",
        "--mcp"
      ]
    },
    "svelte": {
      "type": "local",
      "command": [
        "svelte-mcp"
      ]
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "fetch": {
      "type": "local",
      "command": [
        "uvx",
        "mcp-server-fetch"
      ]
    },
    "searxng": {
      "type": "local",
      "command": [
        "mcp-searxng"
      ],
      "environment": {
        "SEARXNG_URL": "{env:SEARXNG_URL}",
        "AUTH_USERNAME": "{env:SEARXNG_AUTH_USERNAME}",
        "AUTH_PASSWORD": "{env:SEARXNG_AUTH_PASSWORD}"
      }
    },
    "zellij": {
      "type": "local",
      "command": [
        "bun",
        "run",
        "/g/zellij-pane-tracker/mcp-server/index.ts"
      ],
      "enabled": true
    },
    "megamemory": {
      "type": "local",
      "command": [
        "megamemory"
      ],
      "environment": {
        "MEGAMEMORY_DB_PATH": "{env:HOME}/.megamemory/knowledge.db"
      },
      "enabled": true
    },
    "memory-mcp": {
      "type": "local",
      "command": [
        "memory-mcp"
      ],
      "environment": {
        "EMBEDDING_MODEL": "e5_multi"
      },
      "enabled": true
    },
    "exa": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.exa.ai/mcp?tools=web_search_exa,get_code_context_exa,crawling_exa"
      ],
      "enabled": true
    },
    "grep_app": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    }
  },
  "lsp": {
    "qmlls": {
      "command": [
        "qmlls6",
        "-E"
      ],
      "extensions": [
        ".qml"
      ]
    },
    "nushell": {
      "command": [
        "nu",
        "--lsp"
      ],
      "extensions": [
        ".nu"
      ]
    }
  }
}
