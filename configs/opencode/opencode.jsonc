		"explore": {
			"disable": true
		},
		"general": {
			"disable": true
		}
	},
	"permission": {
		"external_directory": "allow",
		"edit": "allow",
		"bash": "allow"
	},
	"watcher": {
		"ignore": [
			"node_modules/**",
			"dist/**",
			".git/**",
			".svelte-kit/**",
			"build/**",
			"__gen__/**"
		]
	},
	"compaction": {
		"auto": true,
		"prune": true
	},
	"formatter": {
		"dprint": {
			"command": [
				"dprint",
				"fmt",
				"$FILE"
			],
			"extensions": [
				".svelte",
				".ts",
				".js",
				".tsx",
				".jsx",
				".html",
				".css",
				".json",
				".yaml",
				".md"
			]
		},
		"prettier": {
			"disabled": true
		}
	},
	"plugin": [
		"@sveltejs/opencode",
		// "oh-my-opencode-slim",
		"opencode-hashline",
		"opencode-mem"
	],
	"mcp": {
		"kernel": {
			"type": "remote",
			"url": "https://mcp.onkernel.com/mcp",
		},
		"nushell": {
			"type": "local",
			"command": [
				"nu", "--mcp"
			]
		},
		"svelte": {
			"type": "local",
			"command": [
				"svelte-mcp"
			]
		},
		// Docs lookup for libraries - https://context7.com
		"context7": {
			"type": "remote",
			"url": "https://mcp.context7.com/mcp"
		},
		// Web fetching - MCP official server (Python via uvx)
		"fetch": {
			"type": "local",
			"command": ["uvx", "mcp-server-fetch"]
		},
		"searxng": {
			"type": "local",
			"command": ["mcp-searxng"],
			"environment": {
				"SEARXNG_URL": "https://searx.oloke.xyz"
			}
		},
		"zellij": {
			"type": "local",
			"command": ["bun", "run", "/g/zellij-pane-tracker/mcp-server/index.ts"],
			"enabled": true
		},
		"megamemory": {
			"type": "local",
			"command": [
				"megamemory"
			],
			"enabled": true
		},
		"exa": {
			"type": "local",
			"command": [
				"npx",
				"-y",
				"mcp-remote",
				"https://mcp.exa.ai/mcp?tools=web_search_exa,get_code_context_exa,crawling_exa"
			],
			"enabled": true
		},
		"grep_app": {
			"type": "remote",
			"url": "https://mcp.grep.app",
			"enabled": true
		}
	},
	"lsp": {
		"qmlls": {
			"command": ["qmlls6", "-E"],
			"extensions": [".qml"]
		},
		"nushell": {
			"command": ["nu", "--lsp"],
			"extensions": [".nu"]
		}
	},
